{
  "tasks": [
    {
      "label": "Build_with_Makefile",
      "type": "shell",
      "command": "make",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/ref/"
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}/ref"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    }
  ],
  "version": "2.0.0"
}
